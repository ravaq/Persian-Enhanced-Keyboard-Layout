default partial alphanumeric_keys
xkb_symbols "basic" {
    name[Group1]= "Persian Enhanced Keyboard Layout";

    include "ire(pel_basic)"

    include "nbsp(zwnj2nb3nnb4)"
    include "level3(ralt_switch)"
};

hidden partial alphanumeric_keys
xkb_symbols "pel_basic" {

    // Persian digits
    key <AE01> { [ Farsi_1,	U200D,  	1,		Arabic_1    ] };
    key <AE02> { [ Farsi_2,	at,		2,		Arabic_2    ] };
    key <AE03> { [ Farsi_3,	numbersign,	3,		Arabic_3    ] };
