    key <AE06> { [ Farsi_6,	asciicircum,    6,		Arabic_6    ] };
    key <AE07> { [ Farsi_7,	multiply,  	7,		Arabic_7    ] };
    key <AE08> { [ Farsi_8,	asterisk,	8,		Arabic_8    ] };
    key <AE09> { [ Farsi_9,	parenright,	9,		Arabic_9    ] };
    key <AE10> { [ Farsi_0,	parenleft,	0,		Arabic_0    ] };

    // Persian letters and symbols
    key <AD01> { [ Arabic_dad,		Arabic_fatha		                                                ] };
