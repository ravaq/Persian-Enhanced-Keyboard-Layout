    key <AD06> { [ Arabic_ghain,	quotedbl,		apostrophe                                      ] };
    key <AD07> { [ Arabic_ain,		comma		                                                        ] };
    key <AD08> { [ Arabic_heh,		U06C0,		        Arabic_heh_doachashmee                          ] };
    key <AD09> { [ Arabic_khah,		bracketright,           U200F                                           ] };
    key <AD10> { [ Arabic_hah,		bracketleft		                                                ] };
    key <AD11> { [ Arabic_jeem,		braceright		                                                ] };
    key <AD12> { [ Arabic_tcheh,	braceleft		                                                ] };

    key <AC01> { [ Arabic_sheen,	Arabic_fathatan 	                                                ] };
    key <AC02> { [ Arabic_seen,		Arabic_kasratan 	                                                ] };
    key <AC03> { [ Farsi_yeh,		Arabic_dammatan,	Arabic_yeh              	                ] };
